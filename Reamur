package com.mercubuana.tb1;

public class Reamur {
	    double toFahrenheit(){
	        //°F = °Ré × 2,25 + 32
	        return (TugasBesar1.SuhuAwal*2.25+32);
	    }
	    double toKelvin(){
	        //K = °Ré / 0,8 + 273,15
	        return (TugasBesar1.SuhuAwal/0.8+237.15);
	    }
	    double tocelcius(){
	        //°C = °Ré / 0,8
	        return (TugasBesar1.SuhuAwal/0.8);
	    }
	}

