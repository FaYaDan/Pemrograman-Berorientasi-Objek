package com.mercubuana.tb1;
import  java.util.*;

	public class celcius {
        
	    double tofahrenheit(){
	        //Rumus Convert celcius (°F = °C × 1,8 + 32)
	        return (TugasBesar1.SuhuAwal*1.8+32);
	    }
	    double toReamur(){
	        // Rumus Convert Reamur  (°Ré = °C × 0,8)
	        return (TugasBesar1.SuhuAwal*0.8);
	    }
	    double toKelvin(){
	        // Rumus Convert kelvin K = °C + 273,15
	        return (TugasBesar1.SuhuAwal+273.15);
	    }
	}

